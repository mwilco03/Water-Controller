[Unit]
Description=Water Treatment Controller HMI (Combined API + UI)
Documentation=https://github.com/mwilco03/Water-Controller
After=network.target

# Note: This service runs both API and UI via the wrapper script.
# For production, prefer using water-controller-api.service and
# water-controller-ui.service separately.

[Service]
Type=simple
User=wtc
Group=wtc
WorkingDirectory=/opt/water-controller
ExecStart=/usr/local/bin/water-controller --web-only
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=water-controller-hmi

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
PrivateTmp=true
ReadWritePaths=/var/lib/water-controller /var/log/water-controller

# Environment - Ports from centralized config
# See config/ports.env for the single source of truth
Environment=DATA_DIR=/var/lib/water-controller
Environment=PYTHONUNBUFFERED=1
Environment=NODE_ENV=production
# Load centralized port configuration
EnvironmentFile=-/opt/water-controller/config/ports.env
EnvironmentFile=-/etc/water-controller/environment

[Install]
WantedBy=multi-user.target
