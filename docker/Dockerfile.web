# Port Configuration:
# The API port is configurable via WTC_API_PORT environment variable.
# Default: 8000 (matches config/ports.env)

FROM python:3.11-slim

WORKDIR /app

# Install build dependencies for posix-ipc and other C extensions
# python3-dev provides Python.h headers needed for C extension compilation
# iputils-ping required for /discover/ping-scan endpoint
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    iputils-ping \
    && rm -rf /var/lib/apt/lists/* \
    && gcc --version \
    && python3 -c "import sysconfig; print(sysconfig.get_config_var('INCLUDEPY'))"

# Install Python dependencies (compiles posix-ipc with gcc + python3-dev)
COPY web/api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Remove build dependencies to reduce image size and attack surface
RUN apt-get purge -y --auto-remove gcc python3-dev

# Copy application
COPY web/api/ .

# Create required directories for startup validation
# These paths are checked by app/core/paths.py and app/core/startup.py
RUN mkdir -p /opt/water-controller /var/lib/water-controller /etc/water-controller

# Create non-root user and set ownership
RUN useradd -m -u 1000 appuser \
    && chown -R appuser:appuser /app /opt/water-controller /var/lib/water-controller /etc/water-controller
USER appuser

# Environment - use centralized port defaults
ENV PYTHONUNBUFFERED=1
ENV API_HOST=0.0.0.0
# Port configured via WTC_API_PORT at runtime (default: 8000)
ENV WTC_API_PORT=8000
# Path configuration for containerized operation
ENV WTC_INSTALL_DIR=/opt/water-controller
ENV WTC_DATA_DIR=/var/lib/water-controller
ENV WTC_CONFIG_DIR=/etc/water-controller
# API-only mode - UI served by separate container
ENV WTC_API_ONLY=true

# Health check uses environment variable
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import os; import httpx; httpx.get(f'http://localhost:{os.environ.get(\"WTC_API_PORT\", \"8000\")}/health')" || exit 1

# Expose default port (actual port may differ at runtime)
EXPOSE 8000

# Start uvicorn with port from environment variable
CMD uvicorn app.main:app --host 0.0.0.0 --port ${WTC_API_PORT:-8000}
