# Water Treatment Controller - Frontend Environment Variables
# Copy this file to .env.local and configure for your environment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (leave empty for same-origin requests)
# For development with separate backend: http://localhost:8080
# For production: typically empty (served from same origin)
NEXT_PUBLIC_API_URL=

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable mock data fallback in development (default: enabled in dev)
# NEXT_PUBLIC_ENABLE_MOCKS=true

# Enable verbose logging in browser console
# NEXT_PUBLIC_DEBUG=false

# =============================================================================
# Build Configuration
# =============================================================================

# Node environment (automatically set by Next.js)
# NODE_ENV=development

# =============================================================================
# WebSocket Configuration (Optional)
# =============================================================================

# WebSocket URL (defaults to same origin with /ws path)
# NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
